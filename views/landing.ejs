<!DOCTYPE html>
<html lang="en">
  <%- include('partials/head', { title: typeof title !== 'undefined' ? title :
  'MediQuest', csrfToken: typeof csrfToken !== 'undefined' ? csrfToken : null })
  %>
  <body class="main-page">
    <!-- Include navbar with explicit variable passing to prevent errors -->
    <%- include('partials/navbar', { isAuthenticated: typeof isAuthenticated !==
    'undefined' ? isAuthenticated : false, user: typeof user !== 'undefined' ?
    user : { name: 'Guest' }, locals: { isPremium: typeof locals !== 'undefined'
    && locals.isPremium ? locals.isPremium : false } }) %>

    <!-- Subscription Notice with explicit variable passing -->
    <%- include('partials/subscription-notice', { isAuthenticated: typeof
    isAuthenticated !== 'undefined' ? isAuthenticated : false, locals: {
    isPremium: typeof locals !== 'undefined' && locals.isPremium ?
    locals.isPremium : false, accessedQuizzes: typeof locals !== 'undefined' &&
    locals.accessedQuizzes ? locals.accessedQuizzes : [] } }) %>

    <!-- Hero Section with Image -->
    <section class="hero-section">
      <div class="container">
        <div class="row align-items-center">
          <div class="col-md-6 hero-text">
            <h1 class="display-4 fw-bold">Test Your Knowledge</h1>
            <p class="lead">
              Challenge yourself with our collection of quizzes and expand your
              understanding with intelligent explanations.
            </p>
            <% if (!isAuthenticated) { %>
            <div class="mt-4">
              <a href="/auth/signup" class="btn btn-light btn-lg me-3">
                <i class="fas fa-user-plus me-2"></i>Get Started
              </a>
              <a href="/auth/login" class="btn btn-outline-light btn-lg">
                <i class="fas fa-sign-in-alt me-2"></i>Sign In
              </a>
            </div>
            <% } %>
          </div>
          <div class="col-md-6 hero-image">
            <!-- Simple, clean image tag -->
            <img
              src="/images/quiz-hero.jpg"
              class="img-fluid hero-img"
              alt="Quiz Hero"
            />
          </div>
        </div>
      </div>
    </section>

    <!-- Additional Quizzes Button -->
    <div class="container mt-5 mb-5">
      <div class="row">
        <div class="col-12 text-center">
          <a href="/additional-quizzes" class="btn btn-lg btn-primary">
            <i class="fas fa-book-open me-2"></i>Explore Additional Quizzes
          </a>
        </div>
      </div>
    </div>

    <!-- Footer -->
    <footer class="text-white py-4 mt-5">
      <div class="container text-center">
        <p class="mb-0">
          &copy; <%= new Date().getFullYear() %> MediQuest. All rights reserved.
        </p>
        <div class="mt-2">
          <a href="#" class="text-white mx-2"
            ><i class="fab fa-facebook"></i
          ></a>
          <a href="#" class="text-white mx-2"><i class="fab fa-twitter"></i></a>
          <a href="#" class="text-white mx-2"
            ><i class="fab fa-instagram"></i
          ></a>
        </div>
      </div>
    </footer>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/csrf-utils.js"></script>
    <script src="/form-protection.js"></script>
    <script src="/dark-mode.js"></script>
    <script src="/user-sync.js"></script>
  </body>
</html>
