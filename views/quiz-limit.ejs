<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>

    <!-- Dark Mode Early Initialization -->
    <script>
      // Apply dark mode immediately if enabled
      (function () {
        if (localStorage.getItem("darkMode") === "enabled") {
          document.documentElement.classList.add("dark-mode");
          document.documentElement.classList.add("dark-mode-initializing");
        }
      })();
    </script>

    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <!-- Font Awesome -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
    />
    <!-- Custom CSS -->
    <link rel="stylesheet" href="/styles.css" />
  </head>
  <body>
    <!-- Dark mode initialization overlay -->
    <div id="dark-mode-init"></div>

    <!-- Include navbar -->
    <%- include('partials/navbar') %>

    <div class="container mt-5">
      <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
          <div class="card text-center">
            <div class="card-body p-5">
              <div class="mb-4">
                <i class="fas fa-lock fa-4x text-warning"></i>
              </div>
              
              <h2 class="card-title mb-4 text-warning">Quiz Limit Reached!</h2>
              
              <p class="card-text mb-4 lead">
                <%= message %>
              </p>

              <% if (!isAuthenticated) { %>
                <!-- For non-authenticated users -->
                <div class="d-grid gap-2 d-md-block">
                  <a href="/auth/signup" class="btn btn-primary btn-lg">
                    <i class="fas fa-user-plus me-2"></i>Sign Up Free
                  </a>
                  <a href="/auth/login" class="btn btn-outline-primary btn-lg">
                    <i class="fas fa-sign-in-alt me-2"></i>Login
                  </a>
                </div>
                
                <div class="mt-4">
                  <h5>Why Sign Up?</h5>
                  <ul class="list-unstyled">
                    <li><i class="fas fa-check text-success me-2"></i>Track your progress</li>
                    <li><i class="fas fa-check text-success me-2"></i>Save quiz results</li>
                    <li><i class="fas fa-check text-success me-2"></i>Access more quizzes</li>
                    <li><i class="fas fa-check text-success me-2"></i>Upgrade to premium anytime</li>
                  </ul>
                </div>
              <% } else { %>
                <!-- For authenticated users -->
                <button class="btn btn-warning btn-lg mb-3" onclick="showSubscriptionModal()">
                  <i class="fas fa-crown me-2"></i>Upgrade to Premium - PKR 1000/month
                </button>
                
                <div class="mt-4">
                  <h5>Premium Benefits</h5>
                  <ul class="list-unstyled">
                    <li><i class="fas fa-infinity text-success me-2"></i>Unlimited quiz access</li>
                    <li><i class="fas fa-robot text-success me-2"></i>AI chat support</li>
                    <li><i class="fas fa-chart-line text-success me-2"></i>Detailed analytics</li>
                    <li><i class="fas fa-headset text-success me-2"></i>Priority support</li>
                  </ul>
                </div>
              <% } %>

              <div class="mt-4">
                <a href="/" class="btn btn-outline-secondary">
                  <i class="fas fa-home me-2"></i>Back to Home
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Footer -->
    <footer class="text-white py-4 mt-5">
      <div class="container text-center">
        <p class="mb-0">&copy; 2024 QuizMaster. All rights reserved.</p>
        <div class="social-icons mt-2">
          <a href="#" class="mx-2"><i class="fab fa-facebook"></i></a>
          <a href="#" class="mx-2"><i class="fab fa-twitter"></i></a>
          <a href="#" class="mx-2"><i class="fab fa-instagram"></i></a>
        </div>
      </div>
    </footer>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/dark-mode.js"></script>
    <script src="/user-sync.js"></script>
    <script src="/quiz.js"></script>
  </body>
</html>