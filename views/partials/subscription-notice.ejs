<% if (typeof isAuthenticated !== 'undefined' && isAuthenticated && typeof
locals !== 'undefined' && !locals.isPremium) { %>
<div class="subscription-notice" id="subscription-notice">
  <div class="container">
    <div class="notice-content">
      <% if (typeof locals !== 'undefined' && locals.accessedQuizzes &&
      locals.accessedQuizzes.length >= 3) { %>
      <p>
        <i class="fas fa-exclamation-circle me-2"></i>
        You've reached the free quiz limit.
        <a href="/subscription" class="notice-link">Upgrade to Premium</a> to
        unlock all quizzes!
      </p>
      <% } else { %>
      <p>
        <i class="fas fa-info-circle me-2"></i>
        <strong
          ><%= 3 - (locals.accessedQuizzes ? locals.accessedQuizzes.length : 0)
          %> free quizzes remaining.</strong
        >
        Free users can access only the first 3 quizzes.
        <a href="/subscription" class="notice-link">Upgrade to Premium</a> for
        unlimited access! Only PKR 1,000/month.
      </p>
      <% } %>
      <button class="notice-close" onclick="hideNotice()">
        <i class="fas fa-times"></i>
      </button>
    </div>
  </div>
</div>

<style>
  .subscription-notice {
    background-color: #f8f9fa;
    padding: 10px 0;
    border-bottom: 1px solid #e9ecef;
    transition: all 0.3s ease;
  }

  body.dark-mode .subscription-notice {
    background-color: #343a40;
    border-bottom: 1px solid #495057;
  }

  .notice-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .subscription-notice p {
    margin: 0;
  }

  .notice-link {
    color: #007bff;
    font-weight: bold;
    text-decoration: none;
  }

  .notice-close {
    background: none;
    border: none;
    font-size: 1rem;
    cursor: pointer;
    color: #6c757d;
    padding: 0 5px;
  }
</style>

<script>
  function hideNotice() {
    document.getElementById("subscription-notice").style.display = "none";
  }
</script>
<% } %>
